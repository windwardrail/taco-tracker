global:
  env:
    - LARAVEL_ENV: production
web1:
  name: taco-tracker
  shared_writable_dirs:
    - /storage/cache
    - /storage/database
    - /storage/logs
    - /storage/sessions
    - /storage/views
    - /storage/work
  document_root: /public
  php_version: 5.5.3
  php_extensions:
    - pdo_mysql
    - mcrypt
    - eaccelerator
    - memcached
    - curl
  before_deploy:
    - "php artisan migrate:install"
    - "php artisan migrate"
    - "php artisan db:seed"
  after_deploy:
    - "rm -f storage/cache/*"
    - "rm -f storage/views/*"
  after_build:
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install --prefer-source"

cache1:
  type: memcached
db1:
  type: mysql